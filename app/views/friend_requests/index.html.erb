<%# <h1>Friend Requests Page</h1> %>

<div class="friend-requests d-flex justify-content-around">
    <div class="notfriend-column d-flex flex-column">
        

        <div class="sent-requests shadow m-2 p-2">
            <h3 class="text-white">Sent Requests</h3>

            <%@pending_users.each do |user|%>
                <div class="sent-request d-flex justify-content-between bg-light my-2 p-2">
                    <%invite = FriendRequest.where(requester_id: current_user.id, reciever_id: user.id, status: false).first%>
                    <div class="user-info">
                        <%=user.name%>
                        <%=link_to "View Profile", user_profile_url(user), class: "profile-link"%>
                    </div>
                    <%=button_to "Cancel", friend_request_path(invite), method: :delete, class: "cancel-button"%>
                </div>
            <%end%>
        </div>

        <div class="new-users shadow m-2 p-2">
            <h3 class="text-white my-2">Add Users</h3>

            <%@new_users.each do |user|%>
                <div class="new-user d-flex justify-content-between bg-light my-2 p-2">
                    <div class="user-info">
                        <%=user.name%>
                        <%=link_to "View Profile", user_profile_url(user), class: "profile-link"%>
                    </div>
                    <%# need to send user_id as parameter to friend_request#Create %>
                    <%# make params sent not visible in url, its usper ugly %>
                    <%=button_to "Invite", friend_requests_path(reciever_id: user.id), method: :post, class: "invite-button"%>
                </div>
            <%end%>
        </div>
    </div>

    <%# maybe make friend column into partial%>
    <%# friend col disappears at small size becaus einherit from wall_posts index %>

    <div id="friend-column" class="d-flex flex-column p-2">
        <p class="mx-0 mb-1">Friends</p>

        <%# maybe add text graphic if no friends added yet %>

        <%current_user.friends.each do |friend|%>
            <div class="friend-card bg-white d-flex p-2">

                <%friendship = current_user.friendship(friend)%>

                <img class="profile-pic" src="<%=asset_path(url_for(friend.profile.attached_img))%>">
                <div class="info d-flex flex-column justify-content-center w-100">
                    <%=friend.name%>
                    <div class="links d-flex align-items-end justify-content-between">
                        
                        <%=link_to "View profile", user_profile_path(friend)%>
                        <%=link_to "Unfriend", friend_request_path(friendship),
                            method: :delete,
                            data: {confirm: "Are you sure?"},
                            class: "unfriend"
                        %>
                    </div>
                </div>
            </div>
        <%end%>
    </div>
</div>

<%# params: {'request[reciever_id]' => user.id} %>