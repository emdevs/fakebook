<div class="chatroom mx-auto p-3 d-flex flex-column">

    <h3><%= @club.name%> chatroom</h3>
    <%# y are there two classes tf %>
    <div class="chatroom-chat" class="d-flex flex-column" data-club-id="<%=@club.id%>">
        <% @messages.each do |msg|%>
            <div class="message bg-light p-2 my-2">

                <%user = User.find(msg.user_id)%>
                <%user_img = user.profile.attached_img%>

                <%# <img src="<%=asset_path(url_for(user_img))%>
                <div class="text">
                    <div class="meta-info d-flex">
                        <p class="name"><%=user.name%></p>
                        <p class="datetime"><%=msg.datetime%></p>
                    </div>
                    <p class="msg"><%=msg.message%></p>
                </div>
            </div>
        <%end%>
    </div>

    <%=form_with(model: @message, local: false, class: "message-form d-flex mt-2") do |form|%>
        <%=form.text_area :message, class: "message-field" %>
        <%=form.hidden_field :messageable_id, value: @chatroom.id%>
        <%=form.hidden_field :messageable_type, value: "Chatroom"%>

        <%=form.submit "Send"%>
    <%end%>
</div>