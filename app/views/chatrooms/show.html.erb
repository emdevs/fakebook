<h1>This is the <%= @club.name%> chatroom!</h1>

<div class="chatroom">
    <div class="chatroom-chat" class="d-flex flex-column" data-club-id="<%=@club.id%>">
        <% @messages.each do |msg|%>
            <div class="message">

                <%user = User.find(msg.user_id)%>
                <%user_img = user.profile.attached_img%>

                <%# <img src="<%=asset_path(url_for(user_img))%>
                <div class="text">
                    <p class="name"><%=user.name%></p>
                    <p><%=msg.message%></p>
                </div>
            </div>
        <%end%>
    </div>

    <%=form_with(model: @message, local: false) do |form|%>
        <%=form.text_area :message, class: "message-field" %>
        <%=form.hidden_field :messageable_id, value: @chatroom.id%>
        <%=form.hidden_field :messageable_type, value: "Chatroom"%>

        <%=form.submit "Send"%>
    <%end%>

</div>