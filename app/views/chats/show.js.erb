<%# Set up locals for convo partial %>
<%@me, @them = (@chat.user_1_id == current_user.id)? [@chat.user_1, @chat.user_2] : [@chat.user_2, @chat.user_1] %>
<%@online_status = (@them.status.online === true)? "online-icon isOnline" : "online-icon"%>
<%@disable_submit = (current_user.friendship(@them))? false : true %>


document.getElementById("chat-container").innerHTML = `

    <%= escape_javascript(render partial: 'chats/show', locals: {
        me: @me,
        them: @them,
        them_status: @online_status,
        disable_submit: @disable_submit
        })
    %> 

`;
