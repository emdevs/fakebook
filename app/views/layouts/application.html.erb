<!DOCTYPE html>
<html>
  <head>
    <title>Fakebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column">
    <%if notice%>
      <p class="notice alert-success m-0 px-2"><%= notice %></p>
    <%end%>
    <%if alert%>
      <p class="alert alert-primary m-0 py-0 px-2"><%= alert %></p>
    <%end%>

    <div id="main-header" class="mt-0 jumbotron jumbotron-fluid">
      <a href="/">
        <img id="fb-logo" class="mx-3 my-2" src="<%=asset_path("fb-logo.png")%>">
      </a>
    </div>

    <div id="top-nav">
      <%if current_user != nil%>
        <nav class="bg-light d-flex justify-content-around p-1 mb-4">
          <%=link_to "Homepage", root_path, class:"link"%>
          <%=link_to "Profile", user_profile_url(current_user.id), class:"link" %> 
          <%=link_to "Create New Post", new_wall_post_path, class:"link" %>
          <%=link_to "Clubs", clubs_path, class:"link"%>
          <%=link_to "Manage Friends", friend_requests_path, class:"link"%>
          <%# <%=link_to "Notifications", notifications_path, class:"link"%>
          <%=link_to "Chat", chats_path, class: "link"%>
          <%=link_to "Logout", destroy_user_session_path, method: :delete, class:"link"%>
        </nav>
      <%end%>
    </div>
    
    <div class="yield d-flex flex-column flex-grow-1"><%= yield %></div>
  </body>
</html>
