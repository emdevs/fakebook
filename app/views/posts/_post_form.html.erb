<%=form_with model: [@postable, @post] do |form|%>
    <div class="form-container p-3 my-4 bg-light">

        <h3><%=form_title%></h3>

        <div class="post-errors">
            <%unless @post.errors.messages.empty?%>
                <div class="alert alert-danger">
                    <%@post.errors.full_messages.each do |msg|%>
                        <li><%=msg%></li>
                    <%end%>
                </div>
            <%end%>
        </div>

        <div class="form-group my-2">
            <%=form.label :title%>
            <%=form.text_field :title, class: "form-control"%>
        </div>

        <div class="form-group my-2">
            <%=form.label :body%>
            <%=form.text_area :body, class: "form-control body"%>
        </div>

        <div class="form-group my-2">
            <%=form.label :image%>
            <%=form.file_field :image, class: "file-field form-control", direct_upload: true%>
            <small class="form-text text-muted">(Optional)</small>
        </div>

        <%=form.submit "Submit", class:"submit-button p-2 mt-3 w-100 border text-white"%>
    </div>
<%end%>