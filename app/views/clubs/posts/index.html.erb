<div id="club-posts" class="position-relative d-flex justify-content-center">
    
    <div id="new-club-post" class="plus-button">
        <%=link_to "", new_club_post_path(@club), class: "link" %>
        <img class="" src="<%=asset_path("icons8-plus-96.png")%>">
    </div>

    <div id="main-posts" class="w-100 d-flex flex-column align-items-center">
        <%@posts.each do |post|%>
            <div class="post d-flex flex-column bg-white shadow-sm m-2 p-3">
                <div class="author-info d-flex">
                    <div class="square-frame">
                        <img class="" src="<%=asset_path(url_for(post.user.profile.attached_img))%>">
                    </div>
                    <div class="d-flex flex-column mx-2">
                        <%=link_to "#{post.user.name}", user_profile_path(post.user), class: "profile-link"%>
                        <p class="date m-0"><%=local_time_ago(post.created_at) %></p>
                    </div>
                </div>

                <div class="post-text my-3">
                    <p class="title mb-1"><%=post.title%></p>
                    <p class="body m-0"><%=post.body%></p>
                </div>

                <% if post.image.attached?%>
                    <img class="post-pic" src= "<%=asset_path(url_for(post.image))%>">
                <%end%>
            
                <p>Likes: <%=post.likes.count%></p>
                
                <%=link_to "View more", wall_post_path(post)%>
            </div>
        <%end%>
    </div>
</div>