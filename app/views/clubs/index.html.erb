<div class="position-relative flex-grow-1 d-flex flex-column">

    <div id="clubs" class="mx-4">   
        <%@clubs.each do |club|%>
            <div class="club mx-auto shadow-sm rounded bg-white">
                <div class="club-card-frame">
                    <img src="<%=asset_path(url_for(club.background_img))%>">
                </div>
                
                <div class="m-2">
                    <h3 class="m-2"><%=club.name%></h3>
                    <p class="member-count position-absolute text-white m-2 p-1 rounded">Members: <%="#{club.members.count}/#{club.capacity}"%></p>

                    <div class="links border-top d-flex justify-content-between align-items-center mx-2 pt-2">
                        <%=link_to "View", club_path(club)%>
                        <%# display diff buttons based on if member or not (OFC there must be database validations too, NO CREATING ADDITIONAL MEMBERSHIP IF CLUBID/MEMBERID EXISTS)%>
                        <%if club.member?(current_user.id)%>
                            <%# if blocked, maybe just display a you are blocked button %>
                            <%id = Membership.find_by(club_id: club.id, member_id: current_user.id).id%>
                            <%=button_to "Leave club", membership_path(id), method: :delete, class: "btn btn-outline-danger btn-sm"%>
                        <%else%>
                            <%=button_to "Join club", memberships_path(club_id: club.id), method: :post, class: "btn btn-outline-success btn-sm"%>
                        <%end%>
                    </div>
                </div>
            </div>
        <%end%>
    </div>

    <button id="new-club-button" class="d-flex justify-content-center align-items-center rounded-circle border border-white m-4">
        <%=link_to "+", new_club_path, class: ""%>
    </button>
</div>

