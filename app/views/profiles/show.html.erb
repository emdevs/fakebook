<div id="main-container" class="d-flex justify-content-center">
    <div id="profile" class="d-flex flex-column align-items-center bg-light shadow my-5 py-4">
        
        <img class="profile-pic" src="<%=asset_path(url_for(@profile.attached_img))%>">

        <h2 class="my-3"><%=@user.name%></h2>
        <p><%=@user.gender%>, <%=@user.age%></p>
            

        <p class="mx-5 text-center"><%=@user.profile.bio%></p>
        <p class=""><%=@user.birth_date%></p>

        <p><%=@user.email%></p>

    
        <%if current_user.id == @user.id%>
            <div id="profile-buttons" class="d-flex">
                <div class="link"></div><%=link_to "Edit Settings", edit_registration_path(current_user)%>
                <%=link_to "Edit Profile", edit_user_profile_path(current_user) %>
            </div>
        <%end%>
    </div>
</div>