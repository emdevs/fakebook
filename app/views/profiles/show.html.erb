<div class="flex-grow-1 d-flex justify-content-center mb-4">
    <div id="profile" class="position-relative d-flex flex-column align-items-center bg-light shadow-sm">
        
        <div class="header position-relative w-100">
            <div id="profile-background" class=""></div>

            <div class="bottom-container"></div>

            <div class="header-info position-absolute d-flex">
                <div class="square-frame profile-pic position-relative">
                    <img class="" src="<%=asset_path(url_for(@profile.attached_img))%>">
                </div>

                <div class="user-info position-relative d-flex mx-4">

                    <div class="name position-absolute">
                        <h3 class="text-white"><%=@user.name%>, <%=@user.age%></h3>
                    </div>

                    <div class="other-info position-absolute d-flex mt-2">
                        <div class="gender d-flex align-items-center">
                            <img class="" src="<%=asset_path("icons8-gender-32.png")%>">
                            <p class="m-0 mx-1"><%=@user.gender.capitalize%></p>
                        </div>

                        <div class="bday d-flex align-items-center mx-2">
                            <img class="" src="<%=asset_path("icons8-birthday-32.png")%>">
                            <p class="m-0 mx-1"><%=@user.birth_date%></p>
                        </div>
                    </div>
                </div>
            </div>

            <%if current_user.id == @user.id%>
                <div id="profile-links" class="d-flex position-absolute justify-content-evenly border w-100 m-0 p-2">
                    <%=link_to "Edit Profile", edit_user_profile_path(current_user), class: "links"%>
                    <%=link_to "Edit Settings", edit_registration_path(current_user), class: "links"%>
                </div>
            <%end%>
        </div>

        
        
        <p class="bio border text-secondary text-center w-100 p-3 m-0 flex-grow-1"><%=@user.profile.bio%></p>
    </div>
</div>