<h1>Profile</h1>

<%if @profile.profile_pic.attached?%>
    <img class="profile-pic" src="<%=url_for(@profile.profile_pic)%>">
<%end%>

<h2>Name: </h2>
<%=@user.name%>

<h2>Gender:</h2>
<%=@user.gender%>

<h2>Age:</h2>
<%=@user.age%>

<h2>Birthday</h2>
<%=@user.birth_date%>

<h2>Email: </h2>
<%=@user.email%>

<h2>Bio:</h2>
<p><%=@user.profile.bio%></p>


<%if current_user.id == @user.id%>
    <%=link_to "Edit Settings", edit_registration_path(current_user)%>
    <%=link_to "Edit Profile", edit_user_profile_path(current_user) %>
<%end%>